<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProject.BuyAnimation"
             xmlns:drawables="clr-namespace:FinalProject.Drawables"
             NavigationPage.HasNavigationBar="False"             
             Title="BuyAnimation">
    <ContentPage.Resources>
        <drawables:BuyAnimate x:Key="animationDrawable"/>
    </ContentPage.Resources>

    <GraphicsView Drawable="{StaticResource animationDrawable}"
                  x:Name="AnimationGraphicsView" StartInteraction="Close">
    </GraphicsView>
</ContentPage>