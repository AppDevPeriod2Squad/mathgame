<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProject.NavPage"
             Title="NavPage"
             xmlns:local="clr-namespace:FinalProject"
             NavigationPage.HasNavigationBar="False">
    <AbsoluteLayout x:Name="container" Background="MidnightBlue">
        <ScrollView AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
            
        
        <Grid AbsoluteLayout.LayoutBounds=".5, 0, 1, 1" 
                             AbsoluteLayout.LayoutFlags="All" 
                             >
                <Grid.ColumnDefinitions>
                    
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
            <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                <ImageButton Source="https://static.vecteezy.com/system/resources/previews/007/066/635/non_2x/giganotosaurus-dinosaur-cartoon-colored-clipart-free-vector.jpg" 
                Clicked="Dino" 
                WidthRequest="150" 
                HeightRequest="150"
                CornerRadius="25" />
                <Label Text="Dino-game" HorizontalOptions="Center"  FontSize="Subtitle"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="0" Grid.Column="1">
                <ImageButton Source="https://content.mycutegraphics.com/graphics/alligator/greater-than-alligator.png" 
            Clicked="Fish" 
            WidthRequest="150" 
            HeightRequest="150"
            CornerRadius="25" />
                <Label Text="Fish-game" HorizontalOptions="Center"  FontSize="Subtitle"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="0" Grid.Column="2">
                <ImageButton Source="https://t4.ftcdn.net/jpg/02/74/20/69/360_F_274206901_Jt1PHZTbtwne17anw5eD9oABxStNJhYT.jpg"
                Clicked="Greater" 
                WidthRequest="150" 
                HeightRequest="150"
                CornerRadius="25" />
                <Label Text="Which-is-Greater-game" HorizontalOptions="Center"  FontSize="Subtitle"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="1" Grid.Column="0">
                <ImageButton Source="https://i.pinimg.com/736x/84/2f/b5/842fb5485391965509528a7b1540ff74.jpg"
                Clicked="Adding" 
                WidthRequest="150" 
                HeightRequest="150"
                CornerRadius="25" />
                <Label Text="Addition-game" HorizontalOptions="Center"  FontSize="Subtitle"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="1" Grid.Column="1">
                <ImageButton Source="https://ecdn.teacherspayteachers.com/thumbitem/Early-Matching-Activity-Templates-Tracing-Lines-to-Match-Clip-Art-Commercial-7132790-1671478221/original-7132790-3.jpg"
                    Clicked="Matching" 
                    WidthRequest="150" 
                    HeightRequest="150"
                    CornerRadius="25" />
                <Label Text="Matching-game" HorizontalOptions="Center"  FontSize="Subtitle"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Row="1" Grid.Column="2">
            <ImageButton Source="https://ecdn.teacherspayteachers.com/thumbitem/Early-Matching-Activity-Templates-Tracing-Lines-to-Match-Clip-Art-Commercial-7132790-1671478221/original-7132790-3.jpg"
                    Clicked="Multiply" 
                    WidthRequest="150" 
                    HeightRequest="150"
                    CornerRadius="25" />
            <Label Text="Mult-game" HorizontalOptions="Center"  FontSize="Subtitle"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="2" Grid.Column="0">
                <ImageButton Source="https://ecdn.teacherspayteachers.com/thumbitem/Early-Matching-Activity-Templates-Tracing-Lines-to-Match-Clip-Art-Commercial-7132790-1671478221/original-7132790-3.jpg"
                    Clicked="Division" 
                    WidthRequest="150" 
                    HeightRequest="150"
                    CornerRadius="25" />
            <Label Text="Divide-game" HorizontalOptions="Center"  FontSize="Subtitle"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="2" Grid.Column="1">
                <ImageButton Source="https://ecdn.teacherspayteachers.com/thumbitem/Early-Matching-Activity-Templates-Tracing-Lines-to-Match-Clip-Art-Commercial-7132790-1671478221/original-7132790-3.jpg"
                     Clicked="Subtraction" 
                     WidthRequest="150" 
                     HeightRequest="150"
                     CornerRadius="25" />
                <Label Text="Subtraction-game" HorizontalOptions="Center"  FontSize="Subtitle"/>
            </VerticalStackLayout>




        </Grid>
        </ScrollView>
    </AbsoluteLayout>
</ContentPage>
